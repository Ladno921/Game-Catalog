<%- include('../particles/header.ejs') %>

<%- include('../particles/navigation.ejs') %>
    <form class="create__form" action="/items/store" method="post">

        <div class="create__text">
            <h2>Создание</h2>

            <div>
                <h3>Список Жанров</h3>
                <select>
                    <option value="1">Открытый мир</option>
                    <option value="2">Шутеры</option>
                    <option value="3">Гонки</option>
                    <option value="4">Хоррор</option>
                    <option value="5">Выживание</option>
                </select>
            </div>
                <br>
            <div class="form-group">
                <label class="form-group__label" for="title">Название</label>
                <input class="form-group__input" type="text" id="title" name="title" placeholder="Введите Название">
            </div>
        
            <div class="form-group">
                <label class="form-group__label" for="image">Фото</label>
                <input name="image" type="file" placeholder="файл">
                <!-- <input class="form-group__input" type="text" id="image" name="image" placeholder="Фото"> -->
                <!-- <input class="form-group__input" type="text" name="image"> -->
            </div>
        
            <div class="form-group">
                <label class="form-group__label" for="cat_id">Жанр</label>
                <input class="form-group__input" type="text" id="cat_id" name="cat_id" placeholder="Введите Номер Жанра">
            </div> 

            <input class="form-button" type="submit" value="Create">
        </div>
        
    </form>

